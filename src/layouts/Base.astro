---
import "../styles/tailwind.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import SeoHead from "../components/SeoHead.astro"

const { page = {} } = Astro.props
const site = {
  name: "San Diego HandyMan Pros",
  phone: "619-123-4567",
  email: "hello@sandiegohandymanpros.co",
  address: "401 W A St Ste 200, San Diego, CA 92101"
}
const title = page.title ?? site.name
const description = page.description ?? "Trusted local handyman services in San Diego County."
const canonical = page.canonical ?? (Astro.url ? Astro.url.href : "/")
---
<!doctype html>
<html lang="en">
  <head>
    <SeoHead title={title} description={description} canonical={canonical} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased selection:bg-black selection:text-white">
    <Header site={site} />
    <main>
      <slot />
    </main>
    <Footer site={site} />
  </body>
</html>
