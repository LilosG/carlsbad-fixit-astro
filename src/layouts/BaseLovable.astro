---
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  schema?: Record<string, any> | Record<string, any>[];
}
const { title = "San Diego Handyman Pros", description, canonical, schema } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {canonical && <link rel="canonical" href={canonical} />}
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/loveable.css" />
  </head>
  <body>
    <main><slot /></main>
    {schema && <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)}></script>}
  </body>
</html>
