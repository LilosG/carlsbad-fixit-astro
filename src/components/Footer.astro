---
const { site } = Astro.props
---
<footer class="mt-20 border-t bg-gray-50">
  <div class="mx-auto grid max-w-7xl gap-10 px-4 py-12 md:grid-cols-3">
    <div class="space-y-2">
      <div class="text-base font-semibold">{site.name}</div>
      <div class="text-sm text-gray-700">{site.address}</div>
      <div class="text-sm text-gray-700">{site.phone}</div>
      <div class="text-sm"><a href={"mailto:" + site.email} class="underline">{site.email}</a></div>
    </div>
    <div>
      <div class="text-sm font-medium">Explore</div>
      <ul class="mt-3 space-y-2 text-sm">
        <li><a class="underline" href="/services">All Services</a></li>
        <li><a class="underline" href="/service-areas">Service Areas</a></li>
        <li><a class="underline" href="/contact">Contact</a></li>
      </ul>
    </div>
    <div>
      <div class="text-sm font-medium">Hours</div>
      <div class="mt-3 text-sm text-gray-700">Mon–Sat 8:00–6:00</div>
    </div>
  </div>
  <div class="border-t py-4 text-center text-xs text-gray-500">© {new Date().getFullYear()} {site.name}</div>
</footer>
