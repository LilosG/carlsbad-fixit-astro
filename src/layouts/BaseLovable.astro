---
/* Props for simple <title> and <meta name="description"> defaults */
const { title = "", description = "" } = Astro.props;

/* Tailwind must be imported (from src) so Vite bundles it */
import "../styles/tailwind.css";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <!-- Fonts (keep yours) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <!-- Load Lovable CSS AFTER Tailwind so Lovable wins where they conflict -->
    <link rel="stylesheet" href="/loveable.css" />
    <!-- Optional: slot for page-specific SEO tags without touching CSS -->
    <slot name="head" />
  </head>
  <body class="min-h-dvh antialiased text-gray-900">
    <slot />
  </body>
</html>
