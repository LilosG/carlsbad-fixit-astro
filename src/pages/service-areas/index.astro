---
import Base from "../../layouts/Base.astro";
const title = "Service Areas";
const description = "Local handyman service across San Diego County with same-week scheduling.";
const canonical = "https://sandiegohandymanpros.co/service-areas";
const cities = ["Carlsbad","Chula Vista","Del Mar","Encinitas","Escondido","La Jolla","La Mesa","Oceanside","Poway","San Diego","San Marcos"];
---
<Base {title} {description} {canonical}>
  <section class="container py-10">
    <h1 class="h1">Service Areas</h1>
    <ul class="mt-6 grid gap-3 sm:grid-cols-2 md:grid-cols-3">
      {cities.map((c) => (
        <li>
          <a href={`/service-areas/${c.toLowerCase().replaceAll(" ","-")}`} class="card hover:border-ink-300">{c}</a>
        </li>
      ))}
    </ul>
  </section>
</Base>
