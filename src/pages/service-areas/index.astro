---
import Base from "../../layouts/Base.astro"
import JsonLd from "../../components/JsonLd.astro"
import { cities } from "../../data/cities"

const page = {
  title: "Service Areas | San Diego HandyMan Pros",
  description: "We serve San Diego and surrounding cities."
}

const crumbs = [
  { name: "Home", url: "/" },
  { name: "Service Areas", url: "/service-areas" }
]

const breadcrumbLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": crumbs.map((c, i) => ({
    "@type": "ListItem",
    position: i + 1,
    name: c.name,
    item: new URL(c.url, Astro.site || "https://sandiegohandymanpro.co").href
  }))
}
---
<Base {page}>
  <section class="mx-auto max-w-7xl px-4 py-12">
    <nav class="text-sm text-gray-600"><a href="/">Home</a> / <span class="font-medium">Service Areas</span></nav>
    <h1 class="mt-4 text-3xl font-semibold">Service Areas</h1>
    <ul class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {cities.map(c => (
        <li class="border rounded-xl p-5 hover:shadow-sm">
          <a href={`/service-area/${c.slug}`} class="underline">{c.name}</a>
        </li>
      ))}
    </ul>
  </section>
  <JsonLd data={breadcrumbLd} />
</Base>
