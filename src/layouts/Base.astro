---
import "../styles/tailwind.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import SeoHead from "../components/SeoHead.astro"
import JsonLd from "../components/JsonLd.astro"

const { page = {} } = Astro.props
const site = {
  name: "San Diego HandyMan Pros",
  phone: "619-123-4567",
  email: "hello@sandiegohandymanpros.co",
  address: "401 W A St Ste 200, San Diego, CA 92101"
}
const title = page.title ?? site.name
const description = page.description ?? "Trusted local handyman services in San Diego County."
const canonical = page.canonical ?? (Astro.url ? Astro.url.href : "/")
---
<!doctype html>
<html lang="en">
  <head>
    <SeoHead title={title} description={description} canonical={canonical} />
  </head>
  <body class="min-h-screen flex flex-col antialiased">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer site={site} />
  </body>
</html>
