---
import "../styles/tailwind.css";
const { title = "", description = "", canonical = "" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />

    <!-- Fonts (keep yours) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <!-- Lovable CSS AFTER Tailwind -->
    <link rel="stylesheet" href="/loveable.css" />

    {canonical && <link rel="canonical" href={canonical} />}
  </head>
  <body class="min-h-dvh antialiased text-gray-900">
    <slot />
  </body>
</html>
