---
import Base from "../../layouts/Base.astro"
import { cities } from "../../data/cities"
const page = {
  title: "Service Areas | San Diego HandyMan Pros",
  description: "We serve San Diego and surrounding cities."
}
---
<Base {page}>
  <section class="mx-auto max-w-7xl px-4 py-12">
    <h1 class="text-3xl font-semibold">Service Areas</h1>
    <ul class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {cities.map(c => (
        <li class="border rounded-xl p-5 hover:shadow-sm">
          <a href={`/service-area/${c.slug}`} class="underline">{c.name}</a>
        </li>
      ))}
    </ul>
  </section>
</Base>
