---
interface Crumb { href: string; label: string }
const { items = [] as Crumb[] } = Astro.props;
---
<nav aria-label="Breadcrumb" class="container mt-4">
  <ol class="flex flex-wrap gap-2 text-sm text-ink-600">
    {items.map((c, i) => (
      <li class="flex items-center gap-2">
        {i > 0 && <span aria-hidden="true">/</span>}
        {i < items.length - 1 ? (
          <a href={c.href} class="underline hover:no-underline">{c.label}</a>
        ) : (
          <span aria-current="page" class="font-medium text-ink-900">{c.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
