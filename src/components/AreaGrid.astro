---
interface Props { cities: string[] }
const { cities = [] } = Astro.props as Props;
---
<section class="bg-white">
  <div class="container py-12">
    <h2 class="h2">Book in your city</h2>
    <ul class="mt-6 grid gap-3 sm:grid-cols-2 md:grid-cols-3">
      {cities.map((c) => (
        <li>
          <a href={`/service-areas/${c.toLowerCase().replaceAll(" ","-")}`} class="card hover:border-ink-300">
            {c}
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>
