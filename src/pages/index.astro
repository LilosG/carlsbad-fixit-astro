---
import Base from "../layouts/Base.astro"
const page = {
  title: "San Diego HandyMan Pros",
  description: "Trusted local handyman services across San Diego County."
}
---
<Base {page}>
  <section class="mx-auto max-w-7xl px-4 py-20">
    <h1 class="text-4xl md:text-5xl font-semibold">Handyman services you can trust</h1>
    <p class="mt-4 max-w-2xl text-gray-700">Fast, reliable repairs and installs for homes and businesses across San Diego County.</p>
    <div class="mt-8 flex gap-3">
      <a href="/services" class="rounded-xl px-5 py-3 bg-black text-white">All Services</a>
      <a href="/service-areas" class="rounded-xl px-5 py-3 border">Service Areas</a>
    </div>
  </section>
</Base>
