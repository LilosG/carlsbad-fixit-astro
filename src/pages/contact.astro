---
import Base from "../layouts/BaseApp.astro";
const title = "Request a Quote";
const description = "Send details and photos to get an upfront quote and earliest availability.";
const canonical = "https://sandiegohandymanpros.co/contact";
---
<Base {title} {description} {canonical}>
  <section class="container py-10">
    <h1 class="h1">Request a Quote</h1>
    <p class="lead mt-3 max-w-prose">Tell us briefly what you need help with. Photos help us quote faster.</p>
    <form action="https://formspree.io/f/your-id" method="POST" class="mt-8 grid max-w-xl gap-4">
      <label class="block">
        <span class="block text-sm font-medium text-ink-700">Name</span>
        <input name="name" required class="mt-1 w-full rounded-2xl border border-ink-200 p-3" />
      </label>
      <label class="block">
        <span class="block text-sm font-medium text-ink-700">Email</span>
        <input type="email" name="email" required class="mt-1 w-full rounded-2xl border border-ink-200 p-3" />
      </label>
      <label class="block">
        <span class="block text-sm font-medium text-ink-700">Phone</span>
        <input name="phone" class="mt-1 w-full rounded-2xl border border-ink-200 p-3" />
      </label>
      <label class="block">
        <span class="block text-sm font-medium text-ink-700">City</span>
        <input name="city" class="mt-1 w-full rounded-2xl border border-ink-200 p-3" />
      </label>
      <label class="block">
        <span class="block text-sm font-medium text-ink-700">Project details</span>
        <textarea name="details" rows="5" class="mt-1 w-full rounded-2xl border border-ink-200 p-3"></textarea>
      </label>
      <button class="btn btn-primary">Send</button>
    </form>
  </section>
</Base>
