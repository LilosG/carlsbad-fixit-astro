---
const { site } = Astro.props
---
<header class="sticky top-0 z-50 border-b bg-white/80 backdrop-blur supports-backdrop-blur:bg-white/60">
  <div class="mx-auto flex h-14 max-w-7xl items-center justify-between px-4">
    <a href="/" class="text-[17px] font-semibold tracking-tight">{site.name}</a>
    <nav class="hidden items-center gap-7 text-[15px] md:flex">
      <a href="/services" class="hover:text-gray-700">Services</a>
      <a href="/service-areas" class="hover:text-gray-700">Service Areas</a>
      <a href="/contact" class="hover:text-gray-700">Contact</a>
    </nav>
    <a href={"tel:1" + site.phone.replace(/[^0-9]/g, "")} class="rounded-full bg-black px-4 py-2 text-xs font-medium text-white transition hover:opacity-90">
      Call {site.phone}
    </a>
  </div>
</header>
