---
import Base from "../../layouts/Base.astro";
const title = "Drywall Repair | San Diego Handyman Pros";
const description = "Drywall patching, crack repair, texture match, and paint-ready finish. Same-week scheduling.";
---
<Base {title} {description}>
  <section class="container py-10">
    <h1 class="h1">Drywall Repair</h1>
    <p class="lead mt-3">From nail pops to water damage, we repair and blend so it looks original—ready for paint.</p>
    <h2 class="h2 mt-8 mb-3">What’s Included</h2>
    <ul class="list-disc pl-6 text-ink-700">
      <li>Patching holes, dents, cracks</li>
      <li>Tape and mud, sand, and texture match</li>
      <li>Blend to paint-ready finish</li>
      <li>Clean workspace and disposal</li>
    </ul>
    <div class="mt-8 flex gap-3">
      <a href="/contact" class="btn btn-primary">Get a Quote</a>
      <a href="tel:+16191234567" class="btn">Call 619-123-4567</a>
    </div>
  </section>
</Base>
